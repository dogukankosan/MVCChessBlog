@model List<ChessProject.Models.Entitiy.Tbl_Contact>
@{
    ViewBag.Title = "IletisimList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-left:520px"><h1><u>İLETİŞİM BİLGİLER SAYFASI</u></h1></div>
<br />
<br />
<table class="table table-hover" id="tbl1" border="1">
    <thead>
        <tr>
            <th>İSİM</th>
            <th>MAİL</th>
            <th>YORUM İÇERİK</th>
            <th>TARİH</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a href="mailto:@item.Mail">@item.Mail</a> 
                </td>
                <td>@item.Comment</td>
                <td>
                   @item.Date.ToShortDateString()
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $('#tbl1').DataTable(
        {
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            }
        }
    );
</script>


