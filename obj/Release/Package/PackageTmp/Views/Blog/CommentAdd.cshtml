@using ChessProject.Models.Entitiy
@model Tbl_Comment
<div class="col-md-8">
    <h3>Yorum Yazınız..</h3>
    <hr>
    <br />
    @using (Html.BeginForm("CommentEkle", "Blog", FormMethod.Post))
    {
        <div class="form-group col-md-6">
            <label class="sr-only" for="exampleInputEmail1">İSMİNİZİ GİRİNİZ: *</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "İsminiz..", @required = "", MaxLength = 70 })
        </div>
        <div class="form-group col-md-6">
            <label class="sr-only" for="exampleInputEmail1">Email: *</label>
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @placeholder = "Mail Adresiniz..", @Type = "email", @required = "", MaxLength = 100 })
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", @placeholder = "Yorumunuz..", @style = "height:100px", @required = "" })
        </div>
        <input id="submit-button" type="submit"  class="btn btn-lg btn-info" onclick="return confirm('YORUM GÖNDERMEK İSTEDİĞİNİZDEN EMİN MİSİNİZ ?')" value="Gönder">
    }
</div>
